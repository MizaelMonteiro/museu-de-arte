<!DOCTYPE html>
<html lang="pt-br">
<head>
  <title>Listagem de Funcionários</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link 
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" 
    rel="stylesheet"
    integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" 
    crossorigin="anonymous">
  <link rel="stylesheet" href="/stylesheets/estilo-lista.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script>
    function excluir(IdFuncionario) {
      Swal.fire({
        title: 'Exclusão de Funcionário',
        text: "Deseja realmente excluir este funcionário?",
        icon: 'warning',
        showCancelButton: true,
        confirmButtonColor: '#3085d6',
        cancelButtonColor: '#d33',
        confirmButtonText: 'Sim'
      }).then((result) => {
        if (result.isConfirmed) {
          $.ajax({
            url: "/funcionarios/delete/" + IdFuncionario,
            type: "DELETE",
            success: function (res) {
              window.location.href = '/funcionarios/listar';
            },
            error: function (xhr) {
              if (xhr.status === 400) {
                Swal.fire({
                  icon: 'error',
                  title: 'Ação não permitida',
                  text: xhr.responseJSON.message
                });
              } else {
                Swal.fire({
                  icon: 'error',
                  title: 'Erro',
                  text: 'Ocorreu um erro ao excluir a sessão.'
                });
              }
            }
          });
        }
      });
    }
  </script>
</head>
<body>
  <nav class="navbar navbar-expand-lg bg-body-tertiary fixed-top">
    <div class="container-fluid">
      <a class="navbar-brand" aria-current="page" href="http://localhost:3000/introducao/introducao">Home</a>
      <button
        class="navbar-toggler"
        type="button"
        data-bs-toggle="collapse"
        data-bs-target="#navbarNavDropdown"
        aria-controls="navbarNavDropdown"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav">  <!-- Adicionando a <ul> correta -->
          <li class="nav-item">
            <a class="nav-link" href="#">Dados adicionais</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="http://localhost:3000/levantamentos/levantamentos">Levantamentos</a>
          </li>
          <li class="nav-item dropdown">
            <a
              class="nav-link dropdown-toggle"
              href="#"
              role="button"
              data-bs-toggle="dropdown"
              aria-expanded="false"
            >
              Consulta de dados
            </a>
            <ul class="dropdown-menu">
              <li><a class="dropdown-item" href="http://localhost:3000/autores/listar">Autores</a></li>
              <li><a class="dropdown-item" href="http://localhost:3000/Obras/listar">Obras</a></li>
              <li><a class="dropdown-item" href="http://localhost:3000/Sessoes/Listar">Sessões</a></li>
              <li><a class="dropdown-item" href="http://localhost:3000/Exposicoes/listar">Exposições</a></li>
              <li><a class="dropdown-item" href="http://localhost:3000/Visitantes/listar">Visitantes</a></li>
              <li><a class="dropdown-item" href="http://localhost:3000/Funcionarios/listar">Funcionários</a></li>
            </ul>
          </li>
        </ul>
      </div>
    </div>
  </nav>
  
  <div class="container" style="margin-top: 5rem;">
    <h1>Listagem de Funcionários</h1>
    <a href="http://localhost:3000/funcionarios/add" class="btn btn-success mb-3">Incluir</a>
    <table class="table">
      <thead>
        <tr>
          <th>#</th>
          <th>Nome</th>
          <th>Função</th>
          <th>Data de Contratação</th>
          <th>Data de Demissão</th>
          <th>Sessão Atribuída</th>
          <th>Operações</th>
        </tr>
      </thead>
      <tbody>
        <% for (item of resultado) { %>
          <tr>
            <td><%= item.IdFuncionario %></td>
            <td><%= item.NoFuncionario %></td>
            <td><%= item.Funcao %></td>
            <td><%= item.DataContratacao %></td>
            <td>
              <%= (item.DataDemissao === 'Invalid date' ? 'Funcionário ativo' : item.DataDemissao) %>
            </td>
            <td><%= item.NoSessao %></td>
            <td>
              <a href="/funcionarios/edit/<%= item.IdFuncionario %>" class="btn btn-primary">Editar</a>
              <button type="button" class="btn btn-danger" onclick="excluir(<%= item.IdFuncionario %>);">Excluir</button>
            </td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>
  
  <script 
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" 
    integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" 
    crossorigin="anonymous">
  </script>
</body>
</html>
