    <h1>Cadastro de Nacionalidades</h1>
    <form method = "post" action = "/nacionalidades/add" class="row g-3">
        <div class="col-md-6">
            <label for="inputNacionalidades" class="form-label">Nacionalidades</label>
            <input type="text" class="form-control" id="inputNacionalidades" name="nacionalidades" placeholder="Inserir nacionalidade">
        </div>
        <div class="col-md-6">
            <label for="inputIdNacionalidade" class="form-label">IdNacionalidade</label>
            <input type="number" class="form-control" id="inputIdNacionalidade" name="Idnacionalidade" placeholder="Inserir Id da nacionalidade">
        </div>
        <div class="col-12">
            <button type="submit" class="btn btn-primary">Cadastrar</button>
        </div>
    </form>
